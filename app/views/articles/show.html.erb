<h1><%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>
<hr />
<h3>Комментарии:</h3>

<%= 'Без комментариев' if @article.comments.empty? %>

<% @article.comments.each do |comment| %>

    <h2>
      <%= comment.author %>
    </h2>
    <p>
      <%= comment.body %>
    </p>
    
    <hr />

<% end %>


<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </p>

    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>