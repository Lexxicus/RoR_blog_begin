<div class="container">
  <div class="row align-items-center">
    <div class="col align-self-center">
      <h4>
        <%= @article.title %>
      </h4>
    </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <%= @article.text %>
        </p>
      </div>
    </div>
  </div>

  <div class="container">
    <h3>Комментарии:</h3>
    <%= 'Без комментариев' if @article.comments.empty? %>
    <div class="row align-items-start">
      <div class="col">
        <% @article.comments.each do |comment| %>
            <p>
              <%= comment.author %> said: <%= comment.body %>
            </p>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <% if user_signed_in? %>
            <h3>Добавить коментарий</h3>
          <%= form_for([@article, @article.comments.build]) do |f| %>
              <input type="hidden" name="comment[author]" id="comment_author" value="<%= current_user.username %>" />
              <p>
                <%= f.text_area :body %>
              </p>
              <p>
                <%= f.submit %>
              </p>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>