<h1>Название статьи : <%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>
<hr />
<h3>Комментарии:</h3>

<%= 'Без комментариев' if @article.comments.empty? %>

<% @article.comments.each do |comment| %>

    <p>
      <%= comment.author %> said: <%= comment.body %> 
    </p>
    
    <hr />

<% end %>

<h3>Добавить коментарий</h3>

<%= form_for([@article, @article.comments.build]) do |f| %>

    <input type="hidden" name="comment[author]" id="comment_author" value="<%= current_user.username %>" />

    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>