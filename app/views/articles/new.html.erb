<div class="container">
  <div class="row">
    <div class="col">
      <h1>New article</h1>

      <%= form_for :article, url: '/articles' do |f| %>
          <% if @article && @article.errors.any? %>
              <p>

              <ul>
                <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>

              </p>
          <% end %>
          <input type="hidden" name="article[author]" id="article_author" value="<%= current_user.username %>" />
          <p>
            <%= f.label :title %><br />
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br />
            <%= f.text_area :text %>
          </p>

          <p>
           <%= f.submit %>
          </p>
      <% end %>
    </div>
  </div>
</div>
